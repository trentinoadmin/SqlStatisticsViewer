<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
	<OutputType>WinExe</OutputType>
	<TargetFramework>net8.0-windows</TargetFramework>
	<Nullable>enable</Nullable>
	<UseWindowsForms>true</UseWindowsForms>
	<ImplicitUsings>enable</ImplicitUsings>

	<ApplicationVisualStyles>true</ApplicationVisualStyles>
	<ApplicationHighDpiMode>SystemAware</ApplicationHighDpiMode>
	<StartupObject>SqlStatisticsViewer.Program</StartupObject>
	<Title>SQL Statistics Viewer</Title>
	<Description>SQL Statistics Viewer</Description>
	<Copyright>Trentino Financial Solutions Ltd © 2024</Copyright>
	<PackageIcon>Trentino_Favicon_RGB.png</PackageIcon>
	<ApplicationIcon>Assets\Trentino_Favicon_RGB.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="Assets\Trentino_Favicon_RGB.ico" />
  </ItemGroup>

  <ItemGroup>
	<Reference Include="TFormsLib">
	  <HintPath>..\..\..\Releases\Libraries\TLibraries\net8.0-windows7.0\TFormsLib.dll</HintPath>
	</Reference>
  </ItemGroup>

  <ItemGroup>
    <None Update="Assets\Trentino_Favicon_RGB.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
